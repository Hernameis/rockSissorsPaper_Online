package com.mukzzibba.client.controller;

import java.awt.Button;
import java.awt.Frame;
import java.awt.Panel;

import com.mukzzibba.client.button.ExitButton;
import com.mukzzibba.client.button.MenuButton;
import com.mukzzibba.client.window.ClientFrame;

public class RobbyPanel extends Panel{
	Frame frame;
	MenuButton play;
	MenuButton rankboard;
	ExitButton exit;
	
	public RobbyPanel() {
		frame=ClientFrame.getInstance();
		
		play=new MenuButton("플레이","play");
		rankboard=new MenuButton("랭킹","rank");
		exit=new ExitButton("나가기", frame);
		
		add(play);
		add(rankboard);
		add(exit);
	}
}
