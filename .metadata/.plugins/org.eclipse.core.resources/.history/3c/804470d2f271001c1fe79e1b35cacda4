package com.mukzzibba.client.button;

import java.awt.Button;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import com.mukzzibba.client.socketNetwork.SignalToServer;


abstract public class MenuButton extends Button{
	
	public MenuButton(){}
	
	public MenuButton(String name, String msg){
		addActionListener(new ActionListener() {
			@Override
			public void actionPerformed(ActionEvent e) {
				SignalToServer.send(msg);
			}
		});
	}
	
}
