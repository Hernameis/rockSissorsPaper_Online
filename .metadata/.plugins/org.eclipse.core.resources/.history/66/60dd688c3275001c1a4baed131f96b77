public class ChatReader extends Thread{
	
	private Socket sock;
	
	@Override
	public void run() {
		openStream(sock);
		while(sock.isConnected()) {
			
		}
		closeStream(sock);
		sock.close();
	}
	
	private BufferedReader Stream(Socket sock){
		InputStream is=null;
		InputStreamReader isr=null;
		BufferedReader br=null;
		
		is=sock.getInputStream();
		isr=new InputStreamReader(isr);
				
		return br;
	}
	
	private void closeStream(Socket sock){
		
	}
}
