package com.mukzzibba.server.userDb;

import java.io.File;
import java.io.FileInputStream;
import java.io.FileNotFoundException;
import java.io.FileOutputStream;
import java.io.IOException;
import java.io.ObjectInputStream;
import java.io.ObjectOutputStream;
import java.util.HashSet;

public class NicknameDB {
	
	
	public NicknameDB(){
		
	}
	
	public HashSet<String> getDBfromFile(){
		HashSet<String> res=null;
		FileInputStream fis=null;
		ObjectInputStream ois=null;
		File file;
		
		file=new File("NicknamePool.db");
		if(!file.exists()){
			try {
				file.createNewFile();
			} catch (IOException e) {
				e.printStackTrace();
			}
		}
		
		try {
			fis=new FileInputStream(file);
			System.out.println(fis);
			ois=new ObjectInputStream(fis);
			System.out.println(ois);
			
			res=(HashSet<String>)ois.readObject();
		} catch (FileNotFoundException e) {
			e.printStackTrace();
		} catch (IOException e) {
			e.printStackTrace();
		} catch (ClassNotFoundException e) {
			e.printStackTrace();
		} finally {
			try {
				ois.close();
				fis.close();
			} catch (IOException e) {
				e.printStackTrace();
			}
		}
		
		return res;
	}
	
	public boolean isNameInPool(String name){
		HashSet<String> db=getDBfromFile();
		
		if(db.contains(name)){
			return true;
		}
		return false;
	}
	
	public void addNicknameToDBFile(String name){
		File file;
		HashSet<String> db;
		FileOutputStream fos=null;
		ObjectOutputStream oos=null;
		
		db=getDBfromFile();
		db.add(name);
		
		file=new File("NicknamePool.db");
		try {
			fos=new FileOutputStream(file);
			oos=new ObjectOutputStream(fos);
			
			oos.writeObject(db);
		} catch (FileNotFoundException e) {
			e.printStackTrace();
		} catch (IOException e) {
			e.printStackTrace();
		} finally {
			try {
				oos.close();
				fos.close();
			} catch (IOException e) {
				e.printStackTrace();
			}
		}
		
		
	}
	
}
