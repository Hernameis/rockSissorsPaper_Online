package com.mukzzibba.client.button;

import java.awt.Window;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import com.mukzzibba.client.data.UserData;
import com.mukzzibba.client.socketNetwork.SignalToServer;

public class ConfirmInRegisterButton extends ExitButton{
	private static final long serialVersionUID = 6074502414775671090L;
	
	ExitButton thisInstance;
	
	public ConfirmInRegisterButton(String name, Window windowForExit) {
		super(name, windowForExit);
		addActionListener(new ActionListener() {
			@Override
			public void actionPerformed(ActionEvent e) {
				SignalToServer.sendMsg("regi");
			}
		});
		
		setEnabled(false);
		
		thisInstance=this;
		Thread checkPass=new Thread(new Runnable() {
			
			@Override
			public void run() {
				try {
					Thread.sleep(100);
				} catch (InterruptedException e) {
					e.printStackTrace();
				}
				System.out.println("Ã¢ "+this);
				while(this!=null){
					if(UserData.regist.password.getText()==UserData.regist.passwordAgain.getText()){
						thisInstance.setEnabled(true);
					} else {
						thisInstance.setEnabled(false);
					}
				}
				
			}
		});
		checkPass.start();
	}
	
	
}
