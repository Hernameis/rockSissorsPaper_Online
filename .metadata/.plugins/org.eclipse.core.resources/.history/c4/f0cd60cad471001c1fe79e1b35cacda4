package com.mukzzibba.client.controller;

import java.io.IOException;
import java.net.Socket;
import java.net.UnknownHostException;

import com.mukzzibba.client.UserData;

public class DataController extends Thread{
	
	@Override
	public void run() {
		try {
			UserData.mainSocket=new Socket(UserData.serverIp, UserData.port);
		} catch (UnknownHostException e) {
			e.printStackTrace();
		} catch (IOException e) {
			e.printStackTrace();
		}
		while(UserData.end==false){
			try {
				Thread.sleep(100);
			} catch (InterruptedException e) {
				e.printStackTrace();
			}
		}
	}
}
