	}
	
	private String msgFromClient(Socket sock) {
		InputStream is=null;
		String msg=new String("");
		int num=-1;
			
		try {
			is=sock.getInputStream();
			num=is.read();
			if(num!=-1){				
				msg+=(char)num;
			}
			for(int i=0; i<msgNum-1; i++){
				num=is.read();
				msg+=(char)num;
			}
			System.out.println(msg);
		} catch (IOException e) {
			e.printStackTrace();
		}
		return msg;
	}
	

}
