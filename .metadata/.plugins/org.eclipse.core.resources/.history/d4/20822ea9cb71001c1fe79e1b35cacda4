package com.mukzzibba.server;

import java.io.IOException;
import java.net.ServerSocket;
import java.net.Socket;
import java.util.List;

public class Server {
	public static ServerSocket serv;
	public static List<Socket> socketList;
	
	public Server() {
		try {
			serv=new ServerSocket(5000);
			
			while(true) {
				try {
					socketList.add(serv.accept());
				} catch (IOException e) {
					e.printStackTrace();
				}
			}
		} catch (IOException e) {
			e.printStackTrace();
		} finally {
			try {
				serv.close();
			} catch (IOException e) 
				e.printStackTrace();
			}
		}
		
		
	}
}
