package com.tanktank.client.panel;

import java.awt.BorderLayout;
import java.awt.Label;
import java.awt.Panel;

import com.tanktank.client.PleasePressInStartPanel;
import com.tanktank.client.GameNameLabel;

public class StartPanel extends Panel{
	
	public StartPanel(){
		this.setLayout(new BorderLayout());
		
		GameNameLabel gameNameLabel=new GameNameLabel("tanktank");
		
		PleasePressInStartPanel downPanelInStart = new PleasePressInStartPanel();
		
		this.add(gameNameLabel, BorderLayout.CENTER);
		this.add(downPanelInStart, BorderLayout.SOUTH);
	}
}
