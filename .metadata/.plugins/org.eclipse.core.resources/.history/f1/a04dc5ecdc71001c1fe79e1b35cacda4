package com.mukzzibba.client.controller;

import java.awt.GridLayout;
import java.awt.Panel;

import com.mukzzibba.client.data.PanelData;

public class PanelController {
	
	public PanelController() {
		makePanel();
		start();

	}
	
	public static void msetMainPanel() {
		PanelData.mainPanel.setLayout(new GridLayout(1,1));
		PanelData.mainPanel.add(PanelData.startPanel);
	}
	
	public static void makePanel(){
		PanelData.mainPanel=new Panel();
		PanelData.startPanel=new Panel();
		PanelData.robbyPanel=new Panel();
	}
	
	public static void mainToStartPanel(){
		PanelData.mainPanel.removeAll();
		PanelData.mainPanel.add(PanelData.startPanel);
	}
	
//	public static void mainToRobbyPanel(){
		
//	}
}
